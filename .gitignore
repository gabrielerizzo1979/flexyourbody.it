# ignore everything in the root except the "wp-content" directory.
/*
!wp-content/

# ignore everything in the "wp-content" directory, except:
# "themes" directory
wp-content/*
#!wp-content/plugins/
!wp-content/themes/



# SAMPLE
# Ignore everything in the "plugins" directory, except the plugins you
# specify (see the commented-out examples for hints on how to do this.)
# wp-content/plugins/*
# !wp-content/plugins/my-single-file-plugin.php
# !wp-content/plugins/my-directory-plugin/

# Ignore everything in the "themes" directory, except the themes you
# specify (see the commented-out example for a hint on how to do this.)
# wp-content/themes/*
# !wp-content/themes/my-theme/
!wp-content/themes/.gitignore/

# ignore specific themes
wp-content/themes/twenty*/


# GRUNT
# wp-content/themes/*/assets/css/style.css
# wp-content/themes/*/assets/js/core.min.js
# wp-content/themes/*/assets/js/lab.min.js
# wp-content/themes/*/assets/js/gbd.min.js
# wp-content/themes/*/assets/js/app.js
wp-content/themes/*/assets/build/




# ignore specific themes index.php
wp-content/themes/index.php

# ignore all files starting with .
.*

# ignore all files that start with ~
~*


#deploy config
!config.json

# track file .gitignore (i.e. do NOT ignore it)
!.gitignore

# track .editorconfig file (i.e. do NOT ignore it)
!.editorconfig

# track readme.md in the root (i.e. do NOT ignore it)
!readme.md


# ignore log files and databases
*.log
*.sql
*.sqlite


# ignore OS generated files
ehthumbs.db
Thumbs.db
.DS_Store

# ignore Editor files
*.sublime-project
*.sublime-workspace
*.komodoproject


# ignore compiled files
